<p id="notice"><%= notice %></p>

<h1>Listing Dots</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dots.each do |dot| %>
      <tr>
        <td><%= link_to 'Show', dot %></td>
        <td><%= link_to 'Edit', edit_dot_path(dot) %></td>
        <td><%= link_to 'Destroy', dot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

